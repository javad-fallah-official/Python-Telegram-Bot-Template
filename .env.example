# Bot Configuration
BOT_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username
BOT_MODE=polling

# Database Configuration
# DATABASE_TYPE: Choose database backend explicitly
# Options: auto (detect from URL), sqlite, postgresql
# Default: auto
DATABASE_TYPE=auto

# Database URL
# For SQLite (default):
DATABASE_URL=bot.db
# For PostgreSQL (recommended for production):
# DATABASE_URL=postgresql://username:password@localhost:5432/botdb

# Note: If DATABASE_TYPE is set to 'sqlite' or 'postgresql', 
# it will override URL-based detection

# PostgreSQL Connection Pool Settings (optional)
# DB_POOL_MIN_SIZE=5
# DB_POOL_MAX_SIZE=20

# Webhook Configuration (only needed for webhook mode)
WEBHOOK_URL=https://your-domain.com
WEBHOOK_PATH=/webhook
WEBHOOK_SECRET_TOKEN=your_webhook_secret
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8000

# Logging
DEBUG=false
LOG_LEVEL=INFO
LOGGING_ENABLED=true

# Admin Users (comma-separated user IDs)
ADMIN_USER_IDS=123456789,987654321