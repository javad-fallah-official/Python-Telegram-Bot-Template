# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username

# Webhook Configuration (optional - only needed for webhook mode)
WEBHOOK_URL=https://your-domain.com/webhook
WEBHOOK_SECRET_TOKEN=your_secret_token_here
WEBHOOK_PORT=8000
WEBHOOK_HOST=0.0.0.0

# Bot Configuration
BOT_MODE=polling  # Options: polling, webhook
DEBUG=true

# Admin Configuration
ADMIN_USER_IDS=123456789,987654321  # Comma-separated list of admin user IDs

# Database Configuration (optional)
DATABASE_URL=sqlite:///bot.db

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOGGING_ENABLED=true  # Options: true, false - Enable/disable the logging system